<div class="container">
  <div class="jumbotron">

    <h3>Coding Dojo Wall </h3>
    Welcome <%= @currentuser.username %>!

  <div class="container" class="col-md-12">

    <div class="container">

      <form action="/messages/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <label for="comment">Post a Message:</label>
          <textarea class="form-control" rows="5" name="postmessage[content]"></textarea>
          <input type="submit" value="Post a message">
        </div>
      </form>
    </div>
    <% @posts.each do |post| %>
      <div class="container">

        <ul class="list-unstyled">

          <li><%= post.user_id %>  - <%= post.created_at.strftime("%b %d, %Y")%></li>
          <li><h2><%= post.content %></h2>   </li>
          <li> <form action="/comment/create" method="post">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                  <div class="form-group">
                    <textarea class="form-control" rows="1" name="postcomment[content]"></textarea>
                    <input type="submit" value="Post a comment">
                  </div>
                </form></li>
        </ul>
      </div>
        <% end %>


  </div>



  </div>

</div>
