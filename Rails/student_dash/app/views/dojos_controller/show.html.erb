<div class="container">
  <div class="jumbotron">
    <h1><%= @show.branch %> Dojo</h1><a href="/dojos/<%= @show.id %>/edit">Edit</a>
    <h3>Address: <%= @show.street %></h3>
  <h3>City: <%= @show.city %>, State: <%= @show.state %></h3>


  <h2>Student Roster: </h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

    </thead>
    <tbody >
      <% @students.each do |all| %>
      <tr>
        <td><%= all.first_name %></td>
        <td><%= all.last_name %></td>
        <td><%= all.email %></td>
        <td><a href= "/dojos/<%= @show.id %>/students/<%= all.id %>">Show</a> | <a href= "/dojos/<%= all.dojo_id %>/students/<%= all.id %>/edit">Edit</a> | <a href="/dojos/<%= all.dojo_id %>/students/<%= all.id %>" data-method="delete" data-confirm="Confirm Deletion?" ">Destroy</a></td>
      </tr>

    </tbody>
    <% end %>
  </table>

  <a href="/">Home </a>|<a href="/dojos/<%= @show.id %>/students/new"> Add New Student</a>


</div>
</div>
