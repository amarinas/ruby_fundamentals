<div class="container">
  <div class="jumbotron">
    <% if flash[:errors] %>
    <div>
      <p><%= flash[:errors] %></p>
    </div>
    <% end %>

    <h2>New Student</h2>
    <form class="form-horizontal" action="/dojos/<%= @dojo.id %>/students" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <label class="control-label col-sm-2">First Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[first_name]" placeholder="first name">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Last Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[last_name]" placeholder="last name">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Email:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[email]" placeholder="email">
        </div>
      </div>
      <div class="form-group" class="dropdown">
        <label class="control-label col-sm-2">Dojo:</label>
        <select name='ninjas[dojo_id]' class='select'>
          <% @dojos.each do |dojo| %>
          <option name= "<%= dojo.id %>" value="<%= dojo.id %>"><%= dojo.branch %></option>
          <% end %>
        </select>

      </div>

      <input type="submit" value="Add Student">
    </form>

    <a href="/">Home</a> | <a href="/dojos/<%= @dojo.id %>"> <%= @dojo.branch %></a>




  </div>

</div>
