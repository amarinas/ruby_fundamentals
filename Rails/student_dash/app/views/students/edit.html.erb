<div class="container">
  <div class="jumbotron">
    <% if flash[:errors] %>
    <div>
      <p><%= flash[:errors] %></p>
    </div>
    <% end %>

    <h2>Editing <%= @students.first_name %> <%= @students.last_name %></h2>
    <form class="form-horizontal" action="/dojos/<%= @students.dojo_id %>/students/<%= @students.id %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label class="control-label col-sm-2">First Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[first_name]" value="<%= @students.first_name %>">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Last Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[last_name]" value="<%= @students.last_name %>">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Email:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="ninjas[email]" value="<%= @students.email %>">
        </div>
      </div>
      <div class="form-group" class="dropdown">
        <label class="control-label col-sm-2">Dojo:</label>
        <select name='ninjas[dojo_id]' class='select'>
          <% @dojos.each do |dojo| %>
          <option name= "<%= dojo.id %>" value="<%= dojo.id %>"><%= dojo.branch %></option>
          <% end %>
        </select>

      </div>

      <input type="submit" value="Update">
    </form>

    <a href="/">Home</a> | <a href="/dojos/<%= @students.dojo_id %>/students/<%= @students.id %>"> <%= @students.first_name %></a>




  </div>

</div>
